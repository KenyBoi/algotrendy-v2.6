# AlgoTrendy Frontend Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# DEVELOPMENT ENVIRONMENT (Vite Build-Time)
# ============================================
# These variables are used during development with `npm run dev`
# They are replaced at build time by Vite

# Backend API URL
# Development: http://localhost:5002/api
# Production: https://your-backend-domain.com/api
VITE_API_BASE_URL=http://localhost:5002/api

# WebSocket URL (SignalR)
# Development: http://localhost:5002/hubs/market
# Production: https://your-backend-domain.com/hubs/market
VITE_WS_URL=http://localhost:5002/hubs/market

# Feature Flags
VITE_ENABLE_BACKTESTING=true
VITE_ENABLE_OPTIONS_TRADING=true
VITE_ENABLE_PAPER_TRADING=true

# External Services (Optional)
# VITE_TRADINGVIEW_WIDGET_ID=your-widget-id

# Environment
VITE_ENVIRONMENT=development

# ============================================
# PRODUCTION DOCKER RUNTIME CONFIGURATION
# ============================================
# These variables are injected at container startup, not build time
# This allows the same Docker image to work across all environments
# Set these when running the Docker container

# API Base URL
# - Production with reverse proxy: /api (relative)
# - Production direct: http://your-backend-host:5002/api
# - Development: http://localhost:5002/api
API_BASE_URL=/api

# WebSocket Base URL for SignalR connections
# - Leave empty to auto-detect based on current host
# - Production: wss://your-domain.com (auto-detected if empty)
# - Development: ws://localhost:5002
WS_BASE_URL=

# Environment identifier
# Options: development, staging, production
ENVIRONMENT=production

# Application version (should match package.json)
VERSION=2.6.0

# Enable debug logging
# Set to true for development, false for production
ENABLE_DEBUG=false

# ============================================
# Docker Compose Example Usage:
# ============================================
# services:
#   frontend:
#     image: algotrendy-frontend:latest
#     environment:
#       - API_BASE_URL=/api
#       - WS_BASE_URL=
#       - ENVIRONMENT=production
#       - VERSION=2.6.0
#       - ENABLE_DEBUG=false
#     ports:
#       - "80:80"

# ============================================
# Docker Run Example:
# ============================================
# docker run -d \
#   -e API_BASE_URL=/api \
#   -e WS_BASE_URL= \
#   -e ENVIRONMENT=production \
#   -e VERSION=2.6.0 \
#   -e ENABLE_DEBUG=false \
#   -p 80:80 \
#   algotrendy-frontend:latest
