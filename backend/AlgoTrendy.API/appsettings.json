{
  "ConnectionStrings": {
    "QuestDB": "Host=localhost;Port=8812;Database=qdb;Username=admin;Password=quest"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/algotrendy-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5002"
      }
    }
  },
  "MarketData": {
    "FetchIntervalSeconds": 60,
    "DefaultSymbols": {
      "Binance": [ "BTCUSDT", "ETHUSDT", "BNBUSDT", "SOLUSDT", "ADAUSDT" ],
      "OKX": [ "BTC-USDT", "ETH-USDT", "SOL-USDT", "ADA-USDT", "XRP-USDT" ],
      "Coinbase": [ "BTC-USD", "ETH-USD", "SOL-USD", "ADA-USD", "XRP-USD" ],
      "Kraken": [ "XXBTZUSD", "XETHZUSD", "SOLUSD", "ADAUSD", "XXRPZUSD" ]
    },
    "DefaultInterval": "1m",
    "DefaultLimit": 100
  },
  "Trading": {
    "Broker": "binance",
    "DefaultStrategy": "momentum",
    "RiskSettings": {
      "MaxPositionSizePercent": 10,
      "DefaultStopLossPercent": 5,
      "DefaultTakeProfitPercent": 10,
      "MaxConcurrentPositions": 5,
      "MaxTotalExposurePercent": 50,
      "MinOrderSize": 10,
      "MaxOrderSize": null,
      "EnableRiskValidation": true
    }
  },
  "Binance": {
    "UseTestnet": true,
    "ApiKey": "USE_USER_SECRETS_IN_DEVELOPMENT",
    "ApiSecret": "USE_USER_SECRETS_IN_DEVELOPMENT"
  },
  "AzureKeyVault": {
    "KeyVaultUri": "",
    "UseManagedIdentity": true,
    "TenantId": "",
    "ClientId": "",
    "ClientSecret": "",
    "CacheDurationMinutes": 60
  },
  "DataProviders": {
    "AlphaVantage": {
      "Enabled": true,
      "ApiKey": "GET_FREE_KEY_FROM_https://www.alphavantage.co/support/#api-key",
      "DailyRateLimit": 500,
      "MinIntervalSeconds": 180,
      "Comment": "FREE tier: 500 calls/day, 20+ years historical data, 200K+ symbols"
    },
    "YFinance": {
      "Enabled": true,
      "ServiceUrl": "http://localhost:5001",
      "Comment": "FREE unlimited - run: cd backend/AlgoTrendy.DataChannels/PythonServices && pip install -r requirements.txt && python yfinance_service.py"
    },
    "Finnhub": {
      "Enabled": true,
      "ApiKey": "GET_FREE_KEY_FROM_https://finnhub.io/register",
      "PerMinuteRateLimit": 60,
      "MinIntervalSeconds": 1,
      "Comment": "FREE tier: 60 calls/min, 1 year historical data, social sentiment, news, alternative data (insider trades, lobbying)"
    },
    "FinancialModelingPrep": {
      "Enabled": true,
      "ApiKey": "GET_FREE_KEY_FROM_https://site.financialmodelingprep.com/",
      "DailyRateLimit": 250,
      "MinIntervalSeconds": 360,
      "Comment": "FREE tier: 250 calls/day, SEC-audited financials, 50+ ratios, social sentiment (Reddit/Twitter/StockTwits), ESG scores"
    },
    "FRED": {
      "Enabled": false,
      "ApiKey": "GET_FREE_KEY_FROM_https://fred.stlouisfed.org/docs/api/api_key.html",
      "Comment": "FREE: Federal Reserve Economic Data - 816K+ time series, unlimited calls (Phase 3)"
    },
    "TwelveData": {
      "Enabled": false,
      "ApiKey": "GET_FREE_KEY_FROM_https://twelvedata.com/",
      "DailyRateLimit": 800,
      "Comment": "Free tier: 800 calls/day, real-time data (Alternative to Alpha Vantage)"
    },
    "Alpaca": {
      "Enabled": false,
      "ApiKey": "GET_FROM_https://alpaca.markets/",
      "ApiSecret": "GET_FROM_https://alpaca.markets/",
      "PaperTrading": true,
      "Comment": "Free tier: 200 API calls/min, real-time IEX feed (Alternative to Finnhub)"
    }
  },
  "DataCache": {
    "EnableCaching": true,
    "CacheDurationMinutes": 1440,
    "MaxCacheSize": 10000,
    "Comment": "Cache historical data in QuestDB to minimize API calls"
  }
}
