# AlgoTrendy v2.6 Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# AZURE KEY VAULT (Recommended for Production)
# ============================================================================

# Azure Key Vault URI (e.g., https://algotrendy-vault.vault.azure.net/)
AzureKeyVault__KeyVaultUri=

# Use Managed Identity (true) or Service Principal (false)
# Set to true when running on Azure App Service / Container
AzureKeyVault__UseManagedIdentity=true

# Service Principal credentials (only needed if UseManagedIdentity=false)
AzureKeyVault__TenantId=
AzureKeyVault__ClientId=
AzureKeyVault__ClientSecret=

# Cache duration in minutes (default: 60)
AzureKeyVault__CacheDurationMinutes=60

# ============================================================================
# DATABASE
# ============================================================================

# QuestDB Connection String
ConnectionStrings__QuestDB=Host=localhost;Port=8812;Database=qdb;Username=admin;Password=quest

# PostgreSQL Connection String (for orders, positions, etc.)
ConnectionStrings__PostgreSQL=Host=localhost;Port=5432;Database=algotrendy_db;Username=algotrendy;Password=YOUR_PASSWORD

# ============================================================================
# BROKER API CREDENTIALS (Use Key Vault Instead!)
# ============================================================================

# Binance
# Store these in Azure Key Vault as:
# - binance-api-key
# - binance-api-secret
Binance__ApiKey=USE_AZURE_KEY_VAULT
Binance__ApiSecret=USE_AZURE_KEY_VAULT
Binance__UseTestnet=true

# OKX
# Store these in Azure Key Vault as:
# - okx-api-key
# - okx-api-secret
# - okx-passphrase
OKX__ApiKey=USE_AZURE_KEY_VAULT
OKX__ApiSecret=USE_AZURE_KEY_VAULT
OKX__Passphrase=USE_AZURE_KEY_VAULT

# Coinbase
# Store these in Azure Key Vault as:
# - coinbase-api-key
# - coinbase-api-secret
Coinbase__ApiKey=USE_AZURE_KEY_VAULT
Coinbase__ApiSecret=USE_AZURE_KEY_VAULT

# Kraken
# Store these in Azure Key Vault as:
# - kraken-api-key
# - kraken-api-secret
Kraken__ApiKey=USE_AZURE_KEY_VAULT
Kraken__ApiSecret=USE_AZURE_KEY_VAULT

# Bybit
# Store these in Azure Key Vault as:
# - bybit-api-key
# - bybit-api-secret
Bybit__ApiKey=USE_AZURE_KEY_VAULT
Bybit__ApiSecret=USE_AZURE_KEY_VAULT

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# API Base URL
ASPNETCORE_URLS=http://0.0.0.0:5002

# Logging Level (Trace, Debug, Information, Warning, Error, Critical)
Logging__LogLevel__Default=Information

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret (Store in Azure Key Vault as: jwt-secret)
# Generate with: openssl rand -base64 64
JWT__Secret=USE_AZURE_KEY_VAULT
JWT__Issuer=AlgoTrendy
JWT__Audience=AlgoTrendyAPI
JWT__ExpirationMinutes=60

# CORS Allowed Origins (comma-separated)
CORS__AllowedOrigins=http://localhost:3000,http://localhost:5000

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable features
Features__EnableBacktesting=true
Features__EnableLiveTrading=false
Features__EnableWebSocket=true

# ============================================================================
# PERFORMANCE
# ============================================================================

# Maximum concurrent API requests
MaxConcurrentRequests=100

# Request timeout (seconds)
RequestTimeoutSeconds=30

# ============================================================================
# MONITORING
# ============================================================================

# Application Insights (optional)
ApplicationInsights__ConnectionString=

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Swagger UI (only enable in development)
Swagger__Enabled=true

# Detailed error messages (only in development)
DetailedErrors=true

# ============================================================================
# NOTES
# ============================================================================

# SECURITY WARNING:
# - Never commit this file with real values to version control
# - Use Azure Key Vault for all sensitive credentials
# - Rotate secrets regularly
# - Enable audit logging on Key Vault

# For local development:
# 1. Copy this file to .env
# 2. Fill in your local database credentials
# 3. Use 'dotnet user-secrets' for API keys, OR
# 4. Configure Azure Key Vault and use az login

# For production:
# 1. Configure Azure Key Vault
# 2. Enable Managed Identity on App Service
# 3. Set environment variables via Azure Portal/CLI
# 4. Do NOT use .env files in production
