# ============================================================================
# AlgoTrendy v2.6 - Production Environment Configuration
# ============================================================================
# Copy this file to .env.production and fill in your actual values
# Usage: docker-compose --env-file .env.production -f docker-compose.prod.yml up -d
# ============================================================================

# ============================================================================
# Domain Configuration
# ============================================================================
DOMAIN=algotrendy.com
ALLOWED_ORIGINS=https://algotrendy.com,https://www.algotrendy.com,https://app.algotrendy.com,https://api.algotrendy.com

# ============================================================================
# Database Configuration
# ============================================================================
QUESTDB_USER=admin
QUESTDB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123

# ============================================================================
# Binance Configuration
# ============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false
BINANCE_US=true

# ============================================================================
# Bybit Configuration
# ============================================================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false

# ============================================================================
# Interactive Brokers Configuration (Stocks/Futures)
# ============================================================================
IBKR_USERNAME=your_ibkr_username
IBKR_PASSWORD=your_ibkr_password
IBKR_ACCOUNT_ID=your_ibkr_account_id
IBKR_GATEWAY_HOST=localhost
IBKR_GATEWAY_PORT=4001
IBKR_CLIENT_ID=1
IBKR_USE_PAPER=false

# ============================================================================
# TradeStation Configuration (Stocks/Options/Futures)
# ============================================================================
TRADESTATION_API_KEY=your_tradestation_api_key
TRADESTATION_API_SECRET=your_tradestation_api_secret
TRADESTATION_ACCOUNT_ID=your_tradestation_account_id
TRADESTATION_USE_PAPER=false

# ============================================================================
# NinjaTrader Configuration (Futures)
# ============================================================================
NINJATRADER_USERNAME=your_ninjatrader_username
NINJATRADER_PASSWORD=your_ninjatrader_password
NINJATRADER_ACCOUNT_ID=your_ninjatrader_account_id
NINJATRADER_HOST=localhost
NINJATRADER_PORT=36973
NINJATRADER_CONNECTION_TYPE=REST

# ============================================================================
# Default Broker Selection
# ============================================================================
# Options: binance, bybit, tradestation, ninjatrader, interactivebrokers
DEFAULT_BROKER=bybit

# ============================================================================
# Market Data Providers (API Keys)
# ============================================================================
# Finnhub (Crypto Market Data)
FINHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage (Stock Market Data)
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# Financial Modeling Prep (Stock Fundamentals)
FMP_API_KEY=your_fmp_api_key_here

# Twelve Data (Alternative Stock Data)
TWELVEDATA_API_KEY=your_twelvedata_api_key_here

# FRED (Economic Data)
FRED_API_KEY=your_fred_api_key_here

# ============================================================================
# Market Data Settings
# ============================================================================
MARKET_DATA_FETCH_INTERVAL=60

# ============================================================================
# Logging Configuration
# ============================================================================
# Seq Server (Optional - for centralized logging)
SEQ_URL=http://seq:5341
SEQ_API_KEY=your_seq_api_key_here

# ============================================================================
# Security Settings
# ============================================================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_FORWARDEDHEADERS_ENABLED=true
ASPNETCORE_HTTPS_PORT=443

# ============================================================================
# Azure Key Vault (Optional - for secure credential storage)
# ============================================================================
AZURE_KEYVAULT_URI=
AZURE_KEYVAULT_TENANT_ID=
AZURE_KEYVAULT_CLIENT_ID=
AZURE_KEYVAULT_CLIENT_SECRET=

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
ADMIN_EMAIL=admin@algotrendy.com

# ============================================================================
# Rate Limiting
# ============================================================================
ENABLE_RATE_LIMITING=true

# ============================================================================
# Notes:
# ============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. NEVER commit this file to git (it's in .gitignore)
# 3. Use strong passwords for production
# 4. For testnet/paper trading, set USE_PAPER=true or TESTNET=true
# 5. Keep this file secure with proper file permissions (chmod 600)
# ============================================================================
